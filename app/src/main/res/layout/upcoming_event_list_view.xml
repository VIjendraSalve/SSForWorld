<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/three">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/seven"
        app:cardElevation="@dimen/four"
        app:cardUseCompatPadding="true"
        tools:style="@style/CardView"
        tools:ignore="PrivateResource">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/three"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/two"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Bold
                        android:id="@+id/tv_event_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Cancer Conference For East Zone"
                        android:textColor="@color/apptheme"
                        android:textSize="@dimen/nineteen"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/five"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/three"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="From"
                                android:textColor="@color/grey_1"
                                android:textSize="@dimen/ten" />

                            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                                android:id="@+id/tv_event_from_date_time"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/two"
                                android:maxLines="1"
                                android:text="Sunday, 28 March 2019"
                                android:textColor="@color/black"
                                android:textSize="@dimen/twelve" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/three"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                                android:id="@+id/to_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="To"
                                android:textColor="@color/grey_1"
                                android:textSize="@dimen/ten"
                                android:visibility="visible"/>

                            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                                android:id="@+id/tv_event_to_date_time"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/two"
                                android:maxLines="1"
                                android:text="Sunday, 28 March 2019"
                                android:textColor="@color/black"
                                android:textSize="@dimen/twelve"
                                android:visibility="visible"/>

                        </LinearLayout>
                    </LinearLayout>

                   <LinearLayout
                       android:layout_marginTop="@dimen/five"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:weightSum="3"
                       android:orientation="horizontal">

                       <LinearLayout
                           android:id="@+id/ll_pdf_form"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:gravity="center"
                           android:padding="@dimen/three"
                           android:layout_weight="1">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="70dp"
                               android:src="@drawable/pdf"
                               android:adjustViewBounds="true"
                               android:scaleType="fitXY"
                               />

                           <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="@dimen/fourteen"
                               android:layout_marginTop="@dimen/three"
                               android:textColor="@color/black"
                               android:text="SCIENTIFIC PROGRAM"/>

                       </LinearLayout>
                       <LinearLayout
                           android:id="@+id/ll_description"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:gravity="center"
                           android:padding="@dimen/three"
                           android:layout_weight="1">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="70dp"
                               android:src="@drawable/pdf"
                               android:adjustViewBounds="true"
                               android:scaleType="fitXY"
                               />

                           <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="@dimen/fourteen"
                               android:layout_marginTop="@dimen/three"
                               android:textColor="@color/black"
                               android:text="Other Info"/>

                       </LinearLayout>
                       <LinearLayout
                           android:id="@+id/ll_online_form_link"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:orientation="vertical"
                           android:gravity="center"
                           android:padding="@dimen/three"
                           android:layout_weight="1">

                           <ImageView
                               android:layout_width="wrap_content"
                               android:layout_height="70dp"
                               android:src="@drawable/form"
                               android:adjustViewBounds="true"
                               android:scaleType="fitXY"
                               />

                           <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:textSize="@dimen/fourteen"
                               android:layout_marginTop="@dimen/three"
                               android:textColor="@color/black"
                               android:text="Abstract"/>

                       </LinearLayout>


                   </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/three"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                                android:id="@+id/txt_orgnizer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Organizer Secretary"
                                android:textColor="@color/grey_1"
                                android:textSize="@dimen/ten"
                                android:visibility="visible"/>

                            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                                android:id="@+id/tv_organizer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/two"
                                android:maxLines="1"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/twelve"
                                android:visibility="visible"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/three"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                                android:id="@+id/txt_venue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Venue"
                                android:textColor="@color/grey_1"
                                android:textSize="@dimen/ten"
                                android:visibility="visible"/>

                            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                                android:id="@+id/tv_venue"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/two"
                                android:maxLines="1"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/twelve"
                                android:visibility="visible"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_is_event_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/two"
                android:layout_marginTop="@dimen/two"
                android:gravity="center"
                android:text="Event Cancelled"
                android:textColor="@color/red"
                android:textSize="@dimen/twelve"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>