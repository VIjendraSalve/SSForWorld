<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_online_form"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five"
            android:orientation="vertical">

            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"
                android:text="@string/info"
                android:textColor="@color/black"
                android:textSize="@dimen/twelve"/>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/five"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/background_new" />

                <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten"
                    android:text="Information"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eighteen" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/five"
                app:cardElevation="@dimen/five"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/ten"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="2"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="@dimen/three"
                            android:background="@color/white"
                            app:cardBackgroundColor="@color/apptheme"
                            app:cardCornerRadius="@dimen/five"
                            app:cardElevation="@dimen/five"
                            app:cardUseCompatPadding="true"
                            >


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:gravity="center"
                                android:text="01"
                                android:textColor="@color/white"
                                android:textSize="@dimen/twenty" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:orientation="vertical">

                        <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full member"
                            android:textColor="@color/apptheme"
                            android:textSize="@dimen/eighteen" />

                        <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Medium
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/three"
                            android:text="@string/fullMember"
                            android:textColor="@color/black"
                            android:textSize="@dimen/twelve" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:cardCornerRadius="@dimen/five"
                app:cardElevation="@dimen/five"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/ten"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:layout_weight="2"
                        android:gravity="center">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="@dimen/three"
                            android:background="@color/white"
                            app:cardBackgroundColor="@color/apptheme"
                            app:cardCornerRadius="@dimen/five"
                            app:cardElevation="@dimen/five"
                            app:cardUseCompatPadding="true">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:gravity="center"
                                android:text="02"
                                android:textColor="@color/white"
                                android:textSize="@dimen/twenty" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:orientation="vertical">

                        <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Bold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Associate member"
                            android:textColor="@color/apptheme"
                            android:textSize="@dimen/eighteen" />

                        <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Medium
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/three"
                            android:text="@string/associateMember"
                            android:textColor="@color/black"
                            android:textSize="@dimen/twelve" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/five"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/background_new" />

                <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten"
                    android:text="Procedure"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eighteen" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/three"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/five"
                app:cardElevation="@dimen/five"
                app:cardUseCompatPadding="true"
                >

                <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/procedure"
                    android:padding="@dimen/six"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve" />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/five"
                android:gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/background_new" />

                <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/ten"
                    android:text="Charges"
                    android:textColor="@color/white"
                    android:textSize="@dimen/eighteen" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/three"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/five"
                app:cardElevation="@dimen/five"
                app:cardUseCompatPadding="true"
                >

                <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Medium
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/charges"
                    android:padding="@dimen/six"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btn_online_form"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:background="@color/apptheme"
        android:gravity="center"
        android:text="Online Registration Form"
        android:textColor="@color/white"
        android:textSize="@dimen/eighteen" />
</RelativeLayout>