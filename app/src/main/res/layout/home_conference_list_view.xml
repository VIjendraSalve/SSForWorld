<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/three">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/seven"
        app:cardElevation="@dimen/four"
        app:cardUseCompatPadding="true"
        tools:style="@style/CardView"
        tools:ignore="PrivateResource">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/five"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/three"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginTop="@dimen/two"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/twenty"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Bold
                        android:id="@+id/tv_conference_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Cancer Conference For East Zone"
                        android:textColor="@color/apptheme"
                        android:textSize="@dimen/seventeen"
                        android:textStyle="bold"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/location"
                            android:layout_marginRight="@dimen/five"
                            android:tint="@color/grey_1"/>

                    <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                        android:id="@+id/tv_conference_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/three"
                        android:gravity="left"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/fourteen"
                        android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/three"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"

                            android:layout_marginRight="@dimen/five"
                            android:tint="@color/grey_1"/>

                    <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                        android:id="@+id/tv_website"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/ten" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/three">

                        <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Organizer Secretary"
                            android:textSize="@dimen/twelve"/>
                        <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                            android:id="@+id/tv_orgsec"
                            android:textColor="@color/apptheme"
                            android:layout_marginTop="@dimen/three"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="@dimen/fourteen"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/five"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/three"

                            android:paddingBottom="@dimen/five"
                            android:layout_weight="2"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date : "
                                android:textColor="@color/grey_1"
                                android:textSize="@dimen/ten" />

                            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                                android:id="@+id/tv_conference_from_date_time"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:maxLines="1"
                                android:layout_marginLeft="@dimen/ten"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/twelve" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/three"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:orientation="vertical">

                            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="To"
                                android:textColor="@color/grey_1"
                                android:textSize="@dimen/ten" />

                            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                                android:id="@+id/tv_conference_to_date_time"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/two"
                                android:maxLines="1"
                                android:text="Sunday, 28 March 2019"
                                android:textColor="@color/black"
                                android:textSize="@dimen/twelve" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/tv_is_event_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/two"
                android:layout_marginTop="@dimen/two"
                android:gravity="center"
                android:text="Event Cancelled"
                android:textColor="@color/red"
                android:textSize="@dimen/twelve"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>