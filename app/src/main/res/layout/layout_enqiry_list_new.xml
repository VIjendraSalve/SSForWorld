<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
           android:padding="@dimen/five"
            android:gravity="right"
            android:orientation="vertical">

            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Bold
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/apptheme"
                android:text="06"
                android:layout_marginTop="@dimen/five"
                android:textSize="@dimen/eighteen"
                />

            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Bold
               android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/apptheme"
                android:text="April"
                android:textSize="@dimen/eighteen"
                />

            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Bold
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/apptheme"
                android:text="2020"
                android:textSize="@dimen/eighteen"
                />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/three"
            android:layout_marginTop="@dimen/ten"
            android:layout_marginBottom="@dimen/ten"
            android:layout_marginRight="@dimen/three"
            android:background="@color/colorGray"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/five"
                app:cardElevation="@dimen/five"
                app:cardUseCompatPadding="true">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">


                    <ImageView
                        android:id="@+id/imageViewpro"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="3"
                        android:scaleType="fitXY"
                        android:src="@drawable/no_image_available"
                        android:layout_gravity="center"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/ten"
                        android:layout_marginLeft="@dimen/five"
                        android:layout_marginTop="@dimen/five"
                        android:layout_marginBottom="@dimen/ten"
                        android:layout_weight="7"
                        android:orientation="vertical">
                        <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Bold
                            android:id="@+id/txt_product_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/three"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@color/white"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/txt_userName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:maxLines="2"
                            android:singleLine="true"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:visibility="gone"/>
                        <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                            android:id="@+id/txt_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="999999999"
                            android:layout_marginTop="@dimen/three"
                            android:maxLines="2"
                            android:textColor="@color/white"
                            android:drawableLeft="@drawable/ic_call_black_24dp"
                            android:drawablePadding="@dimen/ten"
                            android:visibility="visible"/>
                        <TextView
                            android:id="@+id/txt_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Buisness Name"
                            android:maxLines="2"
                            android:layout_marginTop="@dimen/three"
                            android:textColor="@color/black"
                            android:textStyle="normal"
                            android:drawableLeft="@drawable/location_marker"
                            android:drawablePadding="@dimen/ten"
                            android:visibility="gone"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/three"
                                android:text="Product Name:"
                                android:textColor="@color/colorGray"
                                android:textStyle="bold"
                                android:visibility="gone"/>


                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_purpose1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Purpose"
                            android:maxLines="2"
                            android:layout_marginTop="@dimen/three"
                            android:textColor="@color/grey_1"
                            android:textStyle="bold"
                            android:visibility="gone"
                            />
                        <TextView
                            android:id="@+id/txt_purpose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:singleLine="true"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/three"
                            android:textColor="@color/white"

                            />

                        <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Bold
                            android:id="@+id/txt_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/status"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="@dimen/five"/>

                        <TextView
                            android:id="@+id/txt_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/five"
                            android:textColor="@color/grey_1"
                            android:visibility="gone"
                            android:layout_marginTop="@dimen/five"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/iv_delete_user"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_delete_black_24dp"
                            android:tint="@color/apptheme"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>