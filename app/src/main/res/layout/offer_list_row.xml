<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/ten"
        app:cardElevation="@dimen/five"
        app:cardMaxElevation="@dimen/five"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/ten"
                    android:layout_marginTop="@dimen/five"
                    android:backgroundTint="@color/red_a"
                    
                    android:background="@drawable/ic_cancel_black_24dp"
                    />

                <ImageView
                    android:id="@+id/imageView_offer"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="7"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/five">

                <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                android:id="@+id/txt_offerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="Winter Offer"
                android:textColor="@color/apptheme"
                android:textSize="15sp"
                android:textStyle="bold" />

                <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                    android:id="@+id/txt_offerDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:gravity="left"
                    android:text="Winter Offer"
                    android:textColor="@color/grey_1"
                    android:textSize="15sp"
                     />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                        android:id="@+id/txt_validity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/validity"
                        android:textColor="@color/grey_1"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                    <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                        android:id="@+id/txt_validity_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25/07/2019"
                        android:layout_marginLeft="@dimen/five"
                        android:textColor="@color/apptheme"
                        android:textSize="14sp"
                        android:textStyle="normal" />

                </LinearLayout>


            </LinearLayout>

            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                android:id="@+id/txt_offerType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/two"
                android:background="@color/apptheme"
                android:drawableLeft="@drawable/ic_local_offer_black_24dp"
                android:gravity="center"
                android:padding="@dimen/five"
                android:text="Offer Upto 15% Off"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>
