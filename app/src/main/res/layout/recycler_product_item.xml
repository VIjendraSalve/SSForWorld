<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/five"
            app:cardElevation="@dimen/five"
            app:cardUseCompatPadding="true">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">


                <ImageView
                    android:id="@+id/imageViewpro"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="2.5"
                    android:scaleType="fitXY"
                    android:src="@drawable/no_image_available" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginLeft="@dimen/five"
                    android:layout_marginTop="@dimen/five"
                    android:layout_marginBottom="@dimen/ten"
                    android:layout_weight="6.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="djfdsejfdsjvfdsjvdsjnvdsjfndsjfdsfkdsjfn"
                        android:maxLines="2"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textStyle="normal"/>
                    <TextView
                        android:id="@+id/textViewprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:maxLines="2"
                        android:textColor="@color/apptheme"
                        />

                    <TextView
                        android:id="@+id/textview_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2000"
                        android:maxLines="2"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/txt_buisnessNAme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Buisness Name"
                        android:maxLines="2"
                        android:textColor="@color/blue"
                        android:textStyle="italic"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/iv_delete_user"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_delete_black_24dp"
                        android:tint="@color/apptheme"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>