<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:cardCornerRadius="@dimen/five"
        app:cardElevation="@dimen/five"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:orientation="vertical">

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:text="@string/discount"
               android:textSize="@dimen/twenty"
               android:layout_marginTop="@dimen/ten"
               android:textColor="@color/black"/>

            <LinearLayout
                android:id="@+id/ll_completed_module"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

            <EditText
                android:id="@+id/edt_wallet_amount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:hint="Enter Wallet Amount to Deduct"
                android:paddingLeft="@dimen/three"
                android:text="0"
                android:inputType="number"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/fifteen"
                android:text="Select Remaining Payment Mode"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/ten"/>

            <Spinner
                android:id="@+id/spinner_remaining_amount"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:entries="@array/PaymentMode"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/ten"
                android:layout_marginRight="@dimen/ten"

                style="@style/Widget.AppCompat.Light.DropDownItem.Spinner"
                android:background="@drawable/edittext_background"
                />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ten"
                android:visibility="gone"
                android:textColorHint="#c5c5c5">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_discount_amount"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:hint="Enter Discount Percent"
                    android:paddingLeft="@dimen/five"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edittext_background"
                    android:textColor="@color/black"
                    android:textColorHint="@color/apptheme"
                    android:textSize="16sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:layout_marginTop="@dimen/five"
                android:textColorHint="@color/grey_1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_original_cost"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/original_cost"
                    android:inputType="numberDecimal"
                    android:translationY="3dp"
                    android:padding="10dp"
                    android:editable="false"
                    android:focusable="false"
                    android:layout_margin="3dp"
                    android:textColorHint="@color/grey_1"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/spinner_offer_type"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:entries="@array/offer"
                style="@style/Widget.AppCompat.Light.DropDownItem.Spinner"
                android:background="@drawable/edittext_background"
                android:layout_marginTop="@dimen/fifteen"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:layout_marginTop="@dimen/five"
                android:textColorHint="@color/grey_1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_how_much"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/how_much"
                    android:inputType="numberDecimal"
                    android:translationY="3dp"
                    android:padding="10dp"
                    android:text="0"
                    android:layout_margin="3dp"
                    android:textColorHint="@color/grey_1"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:layout_marginTop="@dimen/five"
                android:textColorHint="@color/grey_1">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_sales_cost"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edittext_background"
                    android:hint="@string/sales_cost"
                    android:inputType="numberDecimal"
                    android:editable="false"
                    android:focusable="false"
                    android:translationY="3dp"
                    android:padding="10dp"
                    android:layout_margin="3dp"
                    android:textColorHint="@color/grey_1"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <Button

                android:id="@+id/btn_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/twenty"
                android:layout_marginBottom="@dimen/twenty"
                android:background="@drawable/btn_background_cart"
                android:text="@string/update"
                android:textColor="@color/white" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>