<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/two"
        app:cardElevation="@dimen/two"
        app:cardUseCompatPadding="true"
       >
      <!--  <FrameLayout
            android:background="#FF0000"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/rectangle_gray"
            android:padding="@dimen/five"

           >

            <TextView
                android:id="@+id/image_name"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/circletextview"
                android:gravity="center"
                android:maxLength="1"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="22dp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:srcCompat="@drawable/no"
                android:layout_marginTop="@dimen/two"
                android:visibility="gone"/>

            <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                android:id="@+id/txt_categoryName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left"
                android:padding="@dimen/five"
                android:text="Mobile Phones"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="normal" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>