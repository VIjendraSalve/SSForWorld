<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/three"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/five"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/five"
        app:cardUseCompatPadding="true"
        app:cardMaxElevation="@dimen/five"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="0dp"
                    android:layout_weight="1.4"
                    android:layout_height="100dp"
                    android:src="@drawable/no"
                    android:scaleType="centerInside"
                    android:layout_margin="@dimen/five"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.6"
                    android:layout_marginLeft="@dimen/five"
                    android:padding="@dimen/five"
                    android:orientation="vertical">

                    <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                        android:id="@+id/txt_ProductTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                        android:id="@+id/txt_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Product Name"
                        android:textColor="@color/grey_1"
                        android:maxLines="1"
                        android:layout_marginTop="@dimen/five"
                        android:ellipsize="end"
                        />
                    <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                        android:id="@+id/txt_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selling Price"
                        android:gravity="left"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/five"
                        />
                    <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                        android:id="@+id/txt_original_cost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Original Price"
                        android:gravity="left"
                        android:textColor="@color/grey_1"
                        android:layout_marginTop="@dimen/five"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:gravity="center"
                android:layout_margin="@dimen/five">


                <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                    android:id="@+id/tv_delete_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_delete_black_24dp"
                    android:drawableTint="@color/red_a"
                    android:text="@string/remove"
                    android:textColor="@color/black"
                    android:padding="@dimen/five"
                    android:background="@drawable/edittext_background"
                    android:gravity="center"
                    android:drawablePadding="@dimen/ten"
                    android:layout_weight="1.5"
                    android:layout_marginRight="@dimen/ten"/>


                <com.windhans.client.forworld.customfonts.MyTextView_Poppins_Regular
                    android:id="@+id/tv_share_product"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/ic_share_black_24dp"
                    android:drawableTint="@color/apptheme"
                    android:text="@string/share"
                    android:textColor="@color/black"
                    android:padding="@dimen/five"
                    android:background="@drawable/edittext_background"
                    android:gravity="center"
                    android:drawablePadding="@dimen/ten"
                    android:layout_weight="1.5"
                    android:visibility="visible"
                    android:layout_marginRight="@dimen/ten"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>