    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/ten">
